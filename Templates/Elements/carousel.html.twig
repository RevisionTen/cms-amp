<div {{ editorAttr(element, edit, 'bg-warning') }}>
    {% if edit == false %}
    <div class="d-md-none">
        <amp-carousel
                width="100" height="100"
                layout="responsive"
                type="slides"

                {{ editorAttr(element, edit, 'bg-warning') }}
                class="{{ elementClasses(element) }}"
        >
            {% if element.elements is defined and element.elements|length > 0 %}
                {% for element in element.elements %}
                    {% include config.page_elements[element.elementName].template %}
                {% endfor %}
            {% endif %}
        </amp-carousel>
    </div>
    {% endif %}
    <div class="{% if edit == false %}d-none d-md-block{% endif %}">
        {% if element.elements is defined and element.elements|length > 0 %}
            <div class="row justify-content-center">
                {% for element in element.elements|slice(0, 3) %}
                    <div class="col-md-4 col-lg-3">
                        {% include config.page_elements[element.elementName].template %}
                    </div>
                {% endfor %}
            </div>
            <div class="row justify-content-center">
                {% for element in element.elements|slice(3) %}
                    <div class="col-md-4 col-lg-3">
                        {% include config.page_elements[element.elementName].template %}
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
</div>
